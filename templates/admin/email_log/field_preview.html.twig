<div class="w-full bg-slate-100 dark:bg-gray-900/50 rounded-lg p-6">
    <div class="bg-white rounded-lg shadow-inner overflow-hidden border border-slate-200 dark:border-gray-700 flex">
        {% if entity.content %}
            <iframe 
                srcdoc="{{ entity.content|e('html_attr') }}" 
                class="w-full h-full min-h-[600px] border-none"
                sandbox="allow-same-origin"
                loading="lazy"
            ></iframe>
        {% else %}
            <div class="m-auto text-slate-400 dark:text-gray-600 italic">
                {{ 'preview.no_content'|trans({}, 'SymkitMailerBundle') }}
            </div>
        {% endif %}
    </div>
</div>
